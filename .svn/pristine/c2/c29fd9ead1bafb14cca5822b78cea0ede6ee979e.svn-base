*{font-size:9pt;border:0;margin:0;padding:0;}
body{font-family:'微软雅黑'; margin:0 auto;min-width:980px;}
ul{display:block;margin:0;padding:0;list-style:none;}
li{display:block;margin:0;padding:0;list-style: none;}
img{border:0;}
dl,dt,dd{margin:0;padding:0;display:block;}
a,a:focus{text-decoration:none;color:#000;outline:none;blr:expression(this.onFocus=this.blur());}
a:hover{color:#00a4ac;text-decoration:none;}
table{border-collapse:collapse;border-spacing: 0;}
cite{font-style:normal;}
h2{font-weight:normal;}

/*cloud*/

#mainBody {width:100%;height:100%;position:absolute;z-index:-1;}
.cloud {position:absolute;top:0px;left:0px;width:100%;height:100%;background:url(../images/cloud.png) no-repeat;z-index:1;opacity:0.5;}
#cloud2 {z-index:2;}


/*login*/
.logintop{height:47px; position:absolute; top:0; background:url(../images/loginbg1.png) repeat-x;z-index:100; width:100%;}
.logintop span{color:#fff; line-height:47px; background:url(../images/loginsj.png) no-repeat 21px 18px; text-indent:44px; color:#afc5d2; float:left;}
.logintop ul{float:right; padding-right:30px;}
.logintop ul li{float:left; margin-left:20px; line-height:47px;}
.logintop ul li a{color:#afc5d2;}
.logintop ul li a:hover{color:#fff;}

.systemlogo{background:url(../images/loginlogo.png) no-repeat center;width:100%; height:71px; margin-top:75px;}
.loginbody .title{overflow:hidden;width:416px;margin:20px auto;margin-top:240px;}
.loginbody .title p{color:#eee;font-size:24px;float:left;}
.loginbody .title p span{font-size:16px;margin-left:5px;}
.loginbody .title .right{font-size:24px;float:right;color:#eee;}



#post_form{width:525px;height:100vh;background:rgba(68,68,68,0.7);right:210px;position:absolute;}
.loginbox{background:#eeeeee;border-radius:5px;box-shadow:0px 0px 5px #040000;width:380px;height:450px;margin:0px auto;padding:35px 0px 0px 33px;}
.loginbox ul li{margin-bottom:25px;overflow:hidden;}
.loginbox .label{float:left;width:103px;}
.loginbox .label img{float:left;margin-right:8px;}
.loginbox .label p{float:left;line-height:20px;}
.loginbox .shuru_input{float:left;width:245px;border:none;border-bottom:1px solid #626262;height:45px;line-height:45px;background:#eeeeee;}
.loginbox .shuru_input:focus{outline:none;}


.loginbtn{width:350px;height:35px; font-size:14px; height:48px;font-weight:bold; color:#fff;cursor:pointer; line-height:35px;background:#a42020;}


.loginbm{height:50px; line-height:50px; text-align:center;position:absolute; bottom:0; width:100%; color:#fff;}
.loginbm a{font-weight:bold;color:#fff;}
.loginbm a:hover{color:#0b3a58;}


.verifycodeInp{
	line-height: 33px;
	height: 33px;
	margin:0px;
	font-size: 16px;
	color: #444;
	text-align:center;
	border:1px solid #444;
	width:176px;
	height:48px;
	border-right:none;
	border-radius:3px 0px 0px 3px;
	background-color: #eee;
	float:left;
}
.verifycodeImg{
	width:173px;
	height:48px;
	float:left;
}
.explorerDown{margin-top:88px; margin-left:285px; width:360px; color:#F00;}
.explorerDown p{font-size:15px; line-height:27px;}